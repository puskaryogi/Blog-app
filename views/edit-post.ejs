<div class="edit-post-container">
    <h1 class="page-title">Edit Post</h1>
    
    <form action="/post/<%= post.id %>/edit" method="POST" class="post-form" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" required class="form-control" value="<%= post.title %>">
        </div>
        
        <div class="form-group">
            <label for="content">Content</label>
            <textarea id="content" name="content" rows="10" required class="form-control"><%= post.content %></textarea>
        </div>
        
        <div class="form-group">
            <label for="postImage">Post Image</label>
            <% if (post.image) { %>
                <div class="current-image">
                    <img src="<%= post.image %>" alt="Current post image">
                </div>
            <% } %>
            <input type="file" id="postImage" name="postImage" accept="image/*" class="form-control">
            <small class="form-text">Optional. Max file size: 5MB. Leave empty to keep current image.</small>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Post</button>
            <a href="/post/<%= post.id %>" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div> 